        "jsCode": "const humanKeywords = [\n  'human agent',\n  'talk to human',\n  'speak to human',\n  'human support',\n  'customer service',\n  'live agent',\n  'real person',\n  'human help',\n  'connect me to human',\n  'i need help from human',\n  'talk to someone',\n  'speak to someone',\n  'customer support',\n  'agent support',\n  'need agent',\n  'human assistance',\n  'live support',\n  'representative'\n];\n\nconst chatInput = $input.item.json.chatInput?.toLowerCase() || '';\nconst isHumanRequired = humanKeywords.some(keyword => chatInput.includes(keyword));\n\nreturn {\n  ...($input.item.json),\n  isHumanRequired\n};"
