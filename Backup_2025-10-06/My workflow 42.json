      "id": "908491e1-471b-4736-be05-c75b5107acb7",
      "name": "OpenAI Model for Intent",
      "type": "@n8n/n8n-nodes-langchain.lmChatOpenAi",
      "typeVersion": 1,
      "position": [
        -1300,
        -800
      ],
      "credentials": {
        "openAiApi": {
          "id": "opkNg3RQ0U03w9cG",
          "name": "OpenAi account"
        }
      }
    },
    {
      "parameters": {
        "jsCode": "// Process OpenAI response and format for routing\nconst userMessage = $('Extract Input Fields').first().json.userMessage;\nconst sessionId = $('Extract Input Fields').first().json.sessionId;\n\n// Handle LangChain response format\nconst openAiResponse = $input.first().json.output || $input.first().json.text || $input.first().json.response || '';\n\n// Clean and validate the intent\nconst detectedIntent = openAiResponse.trim().toLowerCase().replace(/[\"']/g, '');\n\n// Valid intents list for validation\nconst validIntents = [\n  'product_search', 'product_info', 'authentication', 'order_list', \n  'order_details', 'cart', 'help_agent', 'contact_info', 'general_query'\n];\n\n// Validate intent, fallback to general_query if invalid\nconst finalIntent = validIntents.includes(detectedIntent) ? detectedIntent : 'general_query';\n\nreturn {\n  json: {\n    userMessage,\n    sessionId,\n    detectedIntent: finalIntent,\n    originalResponse: openAiResponse,\n    timestamp: new Date().toISOString()\n  }\n};"
      },
